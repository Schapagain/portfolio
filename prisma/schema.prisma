generator client {
  provider = "prisma-client-js"
  binaryTargets= ["nativa","rhel-openssl-1.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Book {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  isbn String? 
  isbn13 String?
  myReview String?
  myRating Int?
  authors String?
  tags String?
  owned Boolean @default(false)
  giftedBy String?
  giftedTo String?
  coverImage String?
  photo String?
  dateRead DateTime?
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
}